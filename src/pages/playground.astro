---

<PageLayout title={`Playground | ${SITE_TITLE}`} description={SITE_DESCRIPTION}>
	<section class="playground-header">
		<h1>Playground</h1>
		<p class="lead">Collection of web apps and tools I've built.</p>
	</section>

	<section class="playground-content">
		<div class="app-grid">
			{allApps.map((app) => (
				<a href={app.url} target="_blank" rel="noopener noreferrer" class="app-card">
					<div class="app-icon">{app.icon}</div>
					<div class="app-info">
						<h3 class="app-name">{app.name}</h3>
						<p class="app-description">{app.description}</p>
						<span class="app-category">{app.category}</span>
					</div>
				</a>
			))}
		</div>
	</section>
</PageLayout>

<style>
	.playground-header {
		text-align: center;
		margin-bottom: 3rem;
	}
	.playground-header h1 {
		margin: 0 0 0.5rem 0;
		font-size: 2.5rem;
		font-weight: 700;
		color: var(--text-primary);
	}
	.lead {
		margin: 0;
		color: rgb(var(--gray));
		font-size: 1.1rem;
	}
	.playground-content {
		max-width: 1200px;
		margin: 0 auto;
	}
	.app-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
		gap: 1.5rem;
	}
	.app-card {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		padding: 1.5rem;
		border-radius: 0.75rem;
		border: 1px solid var(--border-color);
		background: var(--bg-primary);
		text-decoration: none;
		color: inherit;
		transition: all 0.2s ease;
	}
	.app-card:hover {
		transform: translateY(-2px);
		border-color: rgb(var(--accent));
		box-shadow: 0 4px 12px rgba(var(--black), 0.08);
	}
	.app-icon {
		width: 64px;
		height: 64px;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 2.5rem;
		background: var(--bg-secondary);
		border-radius: 0.75rem;
	}
	.app-info {
		display: grid;
		gap: 0.5rem;
	}
	.app-name {
		margin: 0;
		font-size: 1.25rem;
		font-weight: 600;
		color: var(--text-primary);
		line-height: 1.3;
	}
	.app-description {
		margin: 0;
		font-size: 0.95rem;
		color: rgb(var(--gray));
		line-height: 1.5;
	}
	.app-category {
		display: inline-block;
		padding: 0.25rem 0.75rem;
		border-radius: 999px;
		font-size: 0.75rem;
		font-weight: 500;
		background: rgba(var(--accent-rgb), 0.1);
		color: rgb(var(--accent));
		width: fit-content;
		margin-top: 0.25rem;
	}

	@media (max-width: 768px) {
		.playground-header h1 {
			font-size: 2rem;
		}
		.app-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
