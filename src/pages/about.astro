---
export const prerender = false; // Disable prerendering to support i18n cookies

import AboutHeroImage from '../assets/blog-placeholder-about.jpg';
import PageLayout from '../layouts/PageLayout.astro';
import { SITE_AUTHOR, SITE_DESCRIPTION } from '../consts';
import { getCurrentLanguage, t } from '../i18n/utils';
import CVPreview from '../components/CVPreview.astro';

const lang = getCurrentLanguage(Astro);
const philosophyItems = t('about.philosophy.items', lang as string | null);
const currentWorkItems = t('about.currentWork.items', lang as string | null);
---

<PageLayout title={`Về tôi | ${SITE_AUTHOR}`} description={SITE_DESCRIPTION} image={AboutHeroImage}>
	<section class="about">
		<div class="about__intro">
			<p class="eyebrow">{t('about.eyebrow', lang)}</p>
			<h1>{t('about.title', lang)} {SITE_AUTHOR}</h1>
			<p class="lead">
				{t('about.description', lang)}
			</p>
			<div class="pill-group">
				<span class="pill">{t('about.pills.tech', lang)}</span>
				<span class="pill">{t('about.pills.design', lang)}</span>
				<span class="pill">{t('about.pills.dx', lang)}</span>
				<span class="pill">{t('about.pills.fundamentals', lang)}</span>
			</div>
			<div class="cv-button-wrapper">
				<a href="https://docs.google.com/document/d/1n1hOc4GJMTRVARpyqjtM6gbWcEyiSmVx/edit?usp=sharing&ouid=110303296683149389854&rtpof=true&sd=true" target="_blank" rel="noreferrer" class="cv-button">
					<svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
						<path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
						<polyline points="14 2 14 8 20 8"></polyline>
						<line x1="16" y1="13" x2="8" y2="13"></line>
						<line x1="16" y1="17" x2="8" y2="17"></line>
						<polyline points="10 9 9 9 8 9"></polyline>
					</svg>
					{t('about.viewCv', lang)}
				</a>
				<button type="button" class="cv-button cv-button-preview" onclick="window.openCVPreview?.()">
					<svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
						<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
						<circle cx="12" cy="12" r="3"></circle>
					</svg>
					{t('about.previewCv', lang)}
				</button>
			</div>
		</div>
		<div class="about__card">
			<img src={AboutHeroImage.src} alt={t('common.imageAlt', lang)} loading="lazy" />
			<ul>
				<li><strong>{t('about.card.role', lang)}</strong> {t('about.card.roleValue', lang)}</li>
				<li><strong>{t('about.card.current', lang)}</strong> {t('about.card.currentValue', lang)}</li>
				<li><strong>{t('about.card.interests', lang)}</strong> {t('about.card.interestsValue', lang)}</li>
			</ul>
		</div>
	</section>

	<section class="section">
		<h2>{t('about.philosophy.title', lang)}</h2>
		<p>
			{t('about.philosophy.description', lang)}
		</p>
		<ul class="list">
			{philosophyItems.map((item) => (
				<li>{item}</li>
			))}
		</ul>
	</section>

	<section class="section">
		<h2>{t('about.currentWork.title', lang)}</h2>
		<ul class="list">
			{currentWorkItems.map((item) => (
				<li>{item}</li>
			))}
		</ul>
	</section>
	
	<CVPreview />
</PageLayout>

<style>
	.about {
		display: grid;
		grid-template-columns: 2fr 1fr;
		gap: 1.5rem;
		align-items: start;
	}
	.about__intro {
		display: grid;
		gap: 0.75rem;
	}
	.eyebrow {
		margin: 0;
		text-transform: uppercase;
		letter-spacing: 0.15em;
		font-size: 0.9rem;
		color: rgb(var(--gray));
	}
	.lead {
		margin: 0;
		color: rgb(var(--gray));
	}
	.pill-group {
		display: flex;
		flex-wrap: wrap;
		gap: 0.6rem;
	}
	.cv-button-wrapper {
		margin-top: 1rem;
		display: flex;
		gap: 0.75rem;
		flex-wrap: wrap;
	}
	.cv-button {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.75rem 1.25rem;
		background: var(--accent);
		color: white;
		border-radius: 8px;
		text-decoration: none;
		font-weight: 600;
		transition: background 0.2s ease, transform 0.1s ease;
		box-shadow: 0 4px 12px rgba(var(--accent-rgb), 0.3);
		border: none;
		cursor: pointer;
		font-size: 1rem;
		font-family: inherit;
	}
	.cv-button:hover {
		background: var(--accent-dark);
		transform: translateY(-2px);
		box-shadow: 0 6px 16px rgba(var(--accent-rgb), 0.4);
	}
	.cv-button-preview {
		background: var(--bg-secondary);
		color: var(--text-primary);
		border: 1px solid var(--border-color);
		box-shadow: 0 2px 8px rgba(var(--gray), 0.1);
	}
	.cv-button-preview:hover {
		background: var(--bg-primary);
		border-color: var(--accent);
		color: var(--accent);
		transform: translateY(-2px);
		box-shadow: 0 4px 12px rgba(var(--gray), 0.15);
	}
	.cv-button svg {
		flex-shrink: 0;
	}
	.pill {
		display: inline-flex;
		align-items: center;
		gap: 0.35rem;
		padding: 0.5rem 0.85rem;
		border-radius: 999px;
		background: rgba(var(--gray-light), 0.8);
		color: rgb(var(--black));
		font-size: 0.95rem;
	}
	.about__card {
		background: var(--bg-primary);
		border-radius: 14px;
		padding: 1rem;
		box-shadow: 0 14px 36px rgba(var(--gray), 10%);
		display: grid;
		gap: 0.8rem;
		transition: background-color 0.3s ease;
	}
	.about__card img {
		width: 100%;
		border-radius: 10px;
	}
	.about__card ul {
		list-style: none;
		margin: 0;
		padding: 0;
		display: grid;
		gap: 0.5rem;
		color: rgb(var(--gray));
	}
	.section {
		margin-top: 2rem;
	}
	.list {
		padding-left: 1.1rem;
		color: rgb(var(--gray));
		display: grid;
		gap: 0.35rem;
	}
	@media (max-width: 900px) {
		.about {
			grid-template-columns: 1fr;
		}
		.about__card {
			order: -1;
		}
	}
</style>
