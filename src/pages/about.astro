---
export const prerender = false; // Disable prerendering to support i18n cookies

import AboutHeroImage from '../assets/blog-placeholder-about.jpg';
import PageLayout from '../layouts/PageLayout.astro';
import { SITE_AUTHOR, SITE_DESCRIPTION } from '../consts';
import { getCurrentLanguage, t } from '../i18n/utils';

const lang = getCurrentLanguage(Astro);
const philosophyItems = t('about.philosophy.items', lang as string | null);
const currentWorkItems = t('about.currentWork.items', lang as string | null);
---

<PageLayout title={`Về tôi | ${SITE_AUTHOR}`} description={SITE_DESCRIPTION} image={AboutHeroImage}>
	<section class="about">
		<div class="about__intro">
			<p class="eyebrow">{t('about.eyebrow', lang)}</p>
			<h1>{t('about.title', lang)} {SITE_AUTHOR}</h1>
			<p class="lead">
				{t('about.description', lang)}
			</p>
			<div class="pill-group">
				<span class="pill">{t('about.pills.tech', lang)}</span>
				<span class="pill">{t('about.pills.design', lang)}</span>
				<span class="pill">{t('about.pills.dx', lang)}</span>
				<span class="pill">{t('about.pills.fundamentals', lang)}</span>
			</div>
		</div>
		<div class="about__card">
			<img src={AboutHeroImage.src} alt={t('common.imageAlt', lang)} loading="lazy" />
			<ul>
				<li><strong>{t('about.card.role', lang)}</strong> {t('about.card.roleValue', lang)}</li>
				<li><strong>{t('about.card.current', lang)}</strong> {t('about.card.currentValue', lang)}</li>
				<li><strong>{t('about.card.interests', lang)}</strong> {t('about.card.interestsValue', lang)}</li>
			</ul>
		</div>
	</section>

	<section class="section">
		<h2>{t('about.philosophy.title', lang)}</h2>
		<p>
			{t('about.philosophy.description', lang)}
		</p>
		<ul class="list">
			{philosophyItems.map((item) => (
				<li>{item}</li>
			))}
		</ul>
	</section>

	<section class="section">
		<h2>{t('about.currentWork.title', lang)}</h2>
		<ul class="list">
			{currentWorkItems.map((item) => (
				<li>{item}</li>
			))}
		</ul>
	</section>
</PageLayout>

<style>
	.about {
		display: grid;
		grid-template-columns: 2fr 1fr;
		gap: 1.5rem;
		align-items: start;
	}
	.about__intro {
		display: grid;
		gap: 0.75rem;
	}
	.eyebrow {
		margin: 0;
		text-transform: uppercase;
		letter-spacing: 0.15em;
		font-size: 0.9rem;
		color: rgb(var(--gray));
	}
	.lead {
		margin: 0;
		color: rgb(var(--gray));
	}
	.pill-group {
		display: flex;
		flex-wrap: wrap;
		gap: 0.6rem;
	}
	.pill {
		display: inline-flex;
		align-items: center;
		gap: 0.35rem;
		padding: 0.5rem 0.85rem;
		border-radius: 999px;
		background: rgba(var(--gray-light), 0.8);
		color: rgb(var(--black));
		font-size: 0.95rem;
	}
	.about__card {
		background: var(--bg-primary);
		border-radius: 14px;
		padding: 1rem;
		box-shadow: 0 14px 36px rgba(var(--gray), 10%);
		display: grid;
		gap: 0.8rem;
		transition: background-color 0.3s ease;
	}
	.about__card img {
		width: 100%;
		border-radius: 10px;
	}
	.about__card ul {
		list-style: none;
		margin: 0;
		padding: 0;
		display: grid;
		gap: 0.5rem;
		color: rgb(var(--gray));
	}
	.section {
		margin-top: 2rem;
	}
	.list {
		padding-left: 1.1rem;
		color: rgb(var(--gray));
		display: grid;
		gap: 0.35rem;
	}
	@media (max-width: 900px) {
		.about {
			grid-template-columns: 1fr;
		}
		.about__card {
			order: -1;
		}
	}
</style>
