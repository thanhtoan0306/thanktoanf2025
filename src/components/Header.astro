	</nav>
	<script>
		const DASHBOARD_ACCESS_KEY = 'dashboardAccess';

		function syncDashboardVisibility() {
			const hasAccess = typeof window !== 'undefined'
				&& window.localStorage.getItem(DASHBOARD_ACCESS_KEY) === 'true';
			const el = document.querySelector('.dashboard-link') as HTMLElement | null;
			if (!el) return;
			el.style.display = hasAccess ? 'inline-block' : 'none';
		}

		if (typeof window !== 'undefined') {
			// Initial sync
			syncDashboardVisibility();

			// React to storage changes (e.g. login/logout in other tabs)
			window.addEventListener('storage', (event) => {
				if (event.key === DASHBOARD_ACCESS_KEY) {
					syncDashboardVisibility();
				}
			});
		}
	</script>
</header>
<style>
header {
	margin: 0;
	padding: 0 1em;
	background: var(--bg-primary);
	box-shadow: 0 2px 8px rgba(var(--black), 5%);
	transition: background-color 0.3s ease;
}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--text-primary);
		border-bottom: 4px solid transparent;
		text-decoration: none;
		transition: color 0.3s ease;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.header-right {
		display: flex;
		align-items: center;
		gap: 0.5em;
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	.dashboard-link {
		display: none;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
