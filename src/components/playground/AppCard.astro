---
interface Props {
	app: {
		id: string;
		name: string;
		description: string;
		icon: string;
		category: string;
		url: string;
		github?: string;
		rank?: number;
	};
	variant?: 'compact' | 'grid';
}

const { app, variant = 'grid' } = Astro.props;
---

{variant === 'compact' ? (
	<a href={app.url} target="_blank" rel="noopener noreferrer" class="app-card-compact">
		<div class="app-icon-small">{app.icon}</div>
		<div class="app-info-compact">
			<h3 class="app-name-compact">{app.name}</h3>
			<p class="app-description-compact">{app.description}</p>
		</div>
		<button class="view-button">Xem</button>
	</a>
) : (
	<a href={app.url} target="_blank" rel="noopener noreferrer" class="app-card-grid">
		{app.rank && <span class="app-rank">{app.rank}</span>}
		<div class="app-icon-grid">{app.icon}</div>
		<div class="app-info-grid">
			<h3 class="app-name-grid">{app.name}</h3>
			<p class="app-description-grid">{app.description}</p>
		</div>
		<button class="view-button-grid">Xem</button>
	</a>
)}

<style>
	/* Compact List Style */
	.app-card-compact {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 1rem;
		border-radius: 0.75rem;
		background: var(--bg-primary);
		border: 1px solid var(--border-color);
		text-decoration: none;
		color: inherit;
		transition: all 0.2s ease;
		cursor: pointer;
	}
	.app-card-compact:hover {
		background: var(--bg-secondary);
		border-color: rgb(var(--accent));
	}
	.app-icon-small {
		width: 56px;
		height: 56px;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 2rem;
		background: var(--bg-secondary);
		border-radius: 0.75rem;
		flex-shrink: 0;
	}
	.app-info-compact {
		flex: 1;
		min-width: 0;
		display: grid;
		gap: 0.25rem;
	}
	.app-name-compact {
		margin: 0;
		font-size: 1rem;
		font-weight: 600;
		color: var(--text-primary);
		line-height: 1.3;
	}
	.app-description-compact {
		margin: 0;
		font-size: 0.85rem;
		color: rgb(var(--gray));
		line-height: 1.4;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}
	.view-button {
		padding: 0.5rem 1.25rem;
		border-radius: 999px;
		border: none;
		background: rgb(var(--accent));
		color: white;
		font-weight: 600;
		font-size: 0.9rem;
		cursor: pointer;
		transition: all 0.2s ease;
		flex-shrink: 0;
	}
	.view-button:hover {
		background: var(--accent-dark);
		transform: scale(1.05);
	}

	/* Grid Card Style */
	.app-card-grid {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.75rem;
		padding: 1.25rem;
		border-radius: 1rem;
		background: var(--bg-primary);
		border: 1px solid var(--border-color);
		text-decoration: none;
		color: inherit;
		transition: all 0.2s ease;
		cursor: pointer;
		position: relative;
		min-width: 160px;
	}
	.app-card-grid:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 24px rgba(var(--black), 0.1);
		border-color: rgb(var(--accent));
	}
	.app-rank {
		position: absolute;
		top: 0.75rem;
		left: 0.75rem;
		width: 24px;
		height: 24px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: rgba(var(--black), 0.6);
		color: white;
		font-size: 0.75rem;
		font-weight: 700;
		border-radius: 50%;
	}
	.app-icon-grid {
		width: 100px;
		height: 100px;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 3.5rem;
		background: var(--bg-secondary);
		border-radius: 1.25rem;
	}
	.app-info-grid {
		width: 100%;
		display: grid;
		gap: 0.5rem;
		text-align: center;
	}
	.app-name-grid {
		margin: 0;
		font-size: 1rem;
		font-weight: 600;
		color: var(--text-primary);
		line-height: 1.3;
	}
	.app-description-grid {
		margin: 0;
		font-size: 0.8rem;
		color: rgb(var(--gray));
		line-height: 1.4;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}
	.view-button-grid {
		width: 100%;
		padding: 0.6rem 1rem;
		border-radius: 999px;
		border: none;
		background: rgb(var(--accent));
		color: white;
		font-weight: 600;
		font-size: 0.9rem;
		cursor: pointer;
		transition: all 0.2s ease;
		margin-top: auto;
	}
	.view-button-grid:hover {
		background: var(--accent-dark);
		transform: scale(1.02);
	}
</style>
