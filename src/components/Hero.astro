---
const {
	title,
	subtitle,
	primaryCta,
	secondaryCta,
	eyebrow = 'Personal dev blog',
} = Astro.props;
---

<section class="hero">
	<p class="eyebrow">{eyebrow}</p>
	<h1>{title}</h1>
	<p class="subtitle">{subtitle}</p>
	<div class="actions">
		{primaryCta && (
			<a class="btn primary" href={primaryCta.href}>{primaryCta.label}</a>
		)}
		{secondaryCta && (
			<a class="btn ghost" href={secondaryCta.href}>{secondaryCta.label}</a>
		)}
	</div>
</section>

<style>
	.hero {
		display: grid;
		gap: 1rem;
		padding: 2rem 2.5rem;
		border-radius: 16px;
		background: var(--bg-primary);
		box-shadow: 0 16px 40px rgba(var(--gray), 14%);
		transition: background-color 0.3s ease;
	}
	.eyebrow {
		margin: 0;
		text-transform: uppercase;
		letter-spacing: 0.2em;
		font-size: 0.8rem;
		color: rgb(var(--gray));
	}
	h1 {
		margin: 0;
		font-size: clamp(2.2rem, 4vw, 3rem);
	}
	.subtitle {
		margin: 0;
		color: rgb(var(--gray));
		font-size: 1.1rem;
		max-width: 720px;
	}
	.actions {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
		align-items: center;
	}
	.btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 0.85rem 1.25rem;
		border-radius: 12px;
		text-decoration: none;
		font-weight: 700;
		border: 1px solid transparent;
		transition: all 0.2s ease;
	}
	.btn.primary {
		background: var(--accent);
		color: white;
		box-shadow: 0 10px 24px rgba(35, 55, 255, 0.25);
	}
	.btn.primary:hover {
		background: var(--accent-dark);
	}
	.btn.ghost {
		border-color: rgba(var(--gray), 30%);
		color: rgb(var(--black));
	}
	.btn.ghost:hover {
		border-color: var(--accent);
		color: var(--accent);
		box-shadow: 0 10px 24px rgba(var(--gray), 15%);
	}

	@media (max-width: 720px) {
		.hero {
			padding: 1.5rem;
		}
	}
</style>

